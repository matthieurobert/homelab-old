apiVersion: external-secrets.io/v1beta1
kind: ClusterSecretStore
metadata:
  name: vault-backend
spec:
  provider:
    vault:
      server: "http://vault.vault.svc.cluster.local:8200"
      path: "deploy"
      auth:
        appRole:
          path: "approle"
          roleId: "{{ role_id }}"
          secretRef:
            namespace: external-secrets
            name: "vault-deploy"
            key: SECRET_ID
